<script>
    /**
     * TEACHER GRADING LOGIC
     * This script handles the automatic scoring of the assessment.
     * It is embedded in the client-side code.
     */

    function gradeTest() {
        let scoreA = 0;
        let scoreB = 0;
        let scoreC = 0;

        // --- SECTION A: MATCHING (8 Marks) ---
        // Logic: Exact match required. 2 marks each.
        // 1 -> A (Solar)
        // 2 -> B (Hydro)
        // 3 -> D (Imported Fuel)
        // 4 -> C (Biomass)
        
        const answersA = {
            "q_a_1": "A",
            "q_a_2": "B",
            "q_a_3": "D",
            "q_a_4": "C"
        };

        for (let id in answersA) {
            const userSelect = document.getElementById(id);
            if (userSelect && userSelect.value === answersA[id]) {
                scoreA += 2;
            }
        }

        // --- SECTION B: MULTIPLE CHOICE (6 Marks) ---
        // Logic: Exact match required. 2 marks each.
        // Q1 -> B (Hydropower)
        // Q2 -> C (Imported fuel)
        // Q3 -> B (Risk reduction)

        const answersB = {
            "q_b_1": "B",
            "q_b_2": "C",
            "q_b_3": "B"
        };

        for (let name in answersB) {
            const selectedOption = document.querySelector(`input[name="${name}"]:checked`);
            if (selectedOption && selectedOption.value === answersB[name]) {
                scoreB += 2;
            }
        }

        // --- SECTION C: GUIDED JUSTIFICATION (6 Marks) ---
        // Logic: Keyword matching (case-insensitive). 2 marks per valid field.
        
        // Item 1: Combined check for Energy Source OR Reason
        // Keywords: solar, hydropower, biomass, renewable, clean, Belize, weather, suitable
        const inputC1_Source = document.getElementById("q_c_1").value.toLowerCase();
        const inputC1_Reason = document.getElementById("q_c_1_reason").value.toLowerCase();
        const keywordsC1 = ["solar", "hydropower", "biomass", "renewable", "clean", "belize", "weather", "suitable"];
        
        // Check if either the source input OR the reason input contains a keyword
        const c1_combined = inputC1_Source + " " + inputC1_Reason;
        let c1_correct = false;
        for (let k of keywordsC1) {
            if (c1_combined.includes(k)) {
                c1_correct = true;
                break;
            }
        }
        if (c1_correct) scoreC += 2;

        // Item 2: Limitation
        // Keywords: drought, pollution, weather, cost, dependence
        const inputC2 = document.getElementById("q_c_2").value.toLowerCase();
        const keywordsC2 = ["drought", "pollution", "weather", "cost", "dependence"];
        let c2_correct = false;
        for (let k of keywordsC2) {
            if (inputC2.includes(k)) {
                c2_correct = true;
                break;
            }
        }
        if (c2_correct) scoreC += 2;

        // Item 3: Mitigation
        // Keywords: energy mix, solar, reduce, manage, alternative
        const inputC3 = document.getElementById("q_c_3").value.toLowerCase();
        const keywordsC3 = ["energy mix", "solar", "reduce", "manage", "alternative"];
        let c3_correct = false;
        for (let k of keywordsC3) {
            if (inputC3.includes(k)) {
                c3_correct = true;
                break;
            }
        }
        if (c3_correct) scoreC += 2;


        // --- TOTAL CALCULATION ---
        const totalScore = scoreA + scoreB + scoreC;

        // --- PERFORMANCE BANDS ---
        let band = "";
        let bandColor = "";

        if (totalScore >= 17) {
            band = "Strong understanding";
            bandColor = "#27ae60"; // Green
        } else if (totalScore >= 13) {
            band = "Satisfactory (Meets SC 4.21)";
            bandColor = "#2980b9"; // Blue
        } else if (totalScore >= 9) {
            band = "Developing";
            bandColor = "#f39c12"; // Orange
        } else {
            band = "Needs intervention";
            bandColor = "#c0392b"; // Red
        }

        // --- DISPLAY RESULTS ---
        document.getElementById("total-score-display").innerText = `Total Score: ${totalScore} / 20`;
        document.getElementById("score-a").innerText = `Section A: ${scoreA} / 8`;
        document.getElementById("score-b").innerText = `Section B: ${scoreB} / 6`;
        document.getElementById("score-c").innerText = `Section C: ${scoreC} / 6`;
        
        const bandEl = document.getElementById("band-display");
        bandEl.innerText = band;
        bandEl.style.borderColor = bandColor;
        bandEl.style.color = bandColor;
        bandEl.style.fontWeight = "bold";

        document.getElementById("results-area").style.display = "block";

        // Scroll to results
        document.getElementById("results-area").scrollIntoView({behavior: "smooth"});

        // Optional: Disable inputs after submission to prevent changing answers
        const inputs = document.querySelectorAll("input, select, button.btn-submit");
        inputs.forEach(el => el.disabled = true);
    }
</script>

</body>
</html>
